@model Application_Security_Assignment.Pages.RegisterModel
@{
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () { 
        $('#password').on('input', function () {
            checkPasswordStrength($(this).val());
        });

        function checkPasswordStrength(password) {
            // Reset the password strength indicator
            $('#password-strength').html('');

            // Minimum length requirement
            if (password.length < 12) {
                $('#password-strength').text('Minimum 12 characters');
                return;
            }

            // Other strength criteria (you can customize these based on your requirements)
            var hasUpperCase = /[A-Z]/.test(password);
            var hasLowerCase = /[a-z]/.test(password);
            var hasNumbers = /\d/.test(password);
			var hasSpecialChars = /[^\da-zA-Z]/.test(password);

            // Calculate strength based on criteria
            var strength = 0;
            strength += hasUpperCase ? 1 : 0;
            strength += hasLowerCase ? 1 : 0;
            strength += hasNumbers ? 1 : 0;
            strength += hasSpecialChars ? 1 : 0;

            // Display strength
            if (strength >= 3) {
                $('#password-strength').text('Strong');
                $('#password-strength').addClass('text-success');
            } else if (strength >= 2) {
                $('#password-strength').text('Moderate');
                $('#password-strength').addClass('text-warning');
            } else {
                $('#password-strength').text('Weak');
                $('#password-strength').addClass('text-danger');
            }
        }
    });
</script>

	<div class="container mt-5">

		<div class="row justify-content-center align-items-center">

			<div class= "col-sm-12 col-md-12 col-lg-4">
				<h1 class="mb-3">Register</h1>
			
